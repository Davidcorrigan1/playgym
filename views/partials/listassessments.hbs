<table class="ui celled padded table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Weight</th>
      <th>Chest</th>
      <th>Thigh</th>
      <th>Upper Arm</th>
      <th>Waist</th>
      <th>Hips</th>
      <th>Trend</th>
      <th>Comment</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each assessments}}
      <tr>
        <td>
          {{dateTime}}
        </td>
        <td>
          {{weight}}
        </td>
        <td>
          {{chest}}
        </td>
        <td>        
          {{thigh}}
        </td>      
        <td>
          {{upperArm}}
        </td>
        <td>
          {{waist}}
        </td>
        <td>
          {{hips}}
        </td>
        <td>
          {{#if weightIncrease}}
                <i class="red large chevron circle up icon"></i>
          {{else}}
                <i class="green large chevron circle down icon"></i>
          {{/if}} 
        </td>
        <td>
          {{comment}}
        </td>
        <td>
          <a href="/dashboard/deleteassessment/{{id}}" class="ui icon button">
            <i class="red trash alternate outline icon"></i>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>